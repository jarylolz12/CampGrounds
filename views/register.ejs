<%- include('partials/header') %> 




<div class="container-fluid border border-dark rounded-sm p-3 text-center shadow-sm p-3 mb-5 col-lg-4 col-md-5 col-sm-6 mt-5">
  <h2>Registration</h2>
  <hr class="border-bottom-0">
  <form action="/reg" method="POST">
    <div class="form-group text-left">
      <label for="nickName">Preferred Name:</label>
      <input type="text" class="form-control" id="nickName" name="nickName">
    </div>
    <div class="form-group text-left">
      <label for="useEmail">Email:</label>
      <input type="text" class="form-control" id="useEmail" name="useEmail">
    </div>
    <div class="form-group text-left">
        <label for="useName">Username:</label>
        <input type="text" class="form-control" id="useName" name="useName">
      </div>
    <div class="form-group text-left">
        <label for="usePass">Password:</label>
        <input type="password" class="form-control" id="usePass" name="usePass">
      </div>
    <button type="submit" class="btn btn-outline-dark btn-md">Submit</button>
    <a href="/campGrounds" class="btn btn-outline-dark btn-md">Back</a>
  </form>
</div>


